    // ...
  }
`
```

### 3. Error Handling Pattern
```jsx
// âœ… Implement proper error handling
const fetchData = async () => {
  try {
    setIsLoading(true)
    setError(null)
    const result = await GlobalApi.getData()
    setData(result.data)
  } catch (error) {
    setError('Failed to fetch data. Please try again.')
    console.error('API Error:', error)
  } finally {
    setIsLoading(false)
  }
}
```

